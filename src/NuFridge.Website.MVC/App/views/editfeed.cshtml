<section>
    <div class="modal-content">
        <!-- ko if: FeedLoaded() -->
        <div class="modal-header">
            <h3 data-bind="text: Feed().Name"></h3>
        </div>
        <div class="modal-body">
            <form role="form">
                <div class="form-group">
                    <p>Feed Name:</p>
                    <input type="text" class="form-control" id="feedNameInput" data-bind="value: Feed().Name">
                </div>
                <button type="submit" class="btn btn-danger" data-bind="click: Cancel">Cancel</button>
                <button type="submit" class="btn btn-primary" data-bind="click: SaveChanges">Save</button>
            </form>
        </div>
        <!-- /ko -->
        <!-- ko if: FeedFailedToLoad() -->
        <p class="bg-danger">There was a problem trying to load the feed.</p>
        <!-- /ko -->
    </div>
</section>