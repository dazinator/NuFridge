<section class="viewFeedsSection">
    <div class="row">
        <p>This page allows you to manage the feeds available on NuFridge.</p>
        <button data-step="1" data-intro="No feeds were found, click the 'Add Feed' button to get started." type="submit" class="btn btn-info addFeedButton" data-bind="click: AddFeed, visible: !ShowError() && !IsLoadingFeeds()">Add Feed</button>
    </div>
    <div class="row" data-step="2" data-intro="Ok, wasn't that fun?">
        <div data-bind="visible: Feeds() != null && Feeds().length > 0">
            <ul class="ds-btn" data-bind="foreach: Feeds()">
                <li>
                    <a class="btn btn-lg btn-primary" data-bind="attr: { href: EditUrl, title: Name }">
                        <i class="glyphicon glyphicon-briefcase pull-left"></i><span><span data-bind="text: Name"></span></span></a>
                </li>
            </ul>
        </div>
        <div data-bind="visible: ShowError">
            <p class="bg-danger" data-bind="text: ErrorMessage"></p>
        </div>
    </div>
</section>
