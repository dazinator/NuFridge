<div data-bind="visible: SignInVisible">
    <div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="text-center">Please sign in or register</h1>
                </div>
                <div class="modal-body">
                    <form class="form col-md-12 center-block">
                        <div class="form-group">
                            <input type="text" class="form-control input-large" placeholder="Email" style="width:97%;">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control input-lg" placeholder="Password" style="width:97%;">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-lg btn-block" data-bind="click: SignIn">Sign In</button>
                            <br />
                            <span class="pull-right"><a href="#" data-bind="click: Register">Register</a></span><span><a href="#" data-bind="click: GetHelp">Need help?</a></span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
