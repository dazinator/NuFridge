<section>
    <div class="modal-content">
        <div class="modal-header">
            <h3 data-bind="text: 'Please enter a feed name'"></h3>
        </div>
        <div class="modal-body">
            <form role="form">
                <div class="form-group">
                    <p>Name:</p>
                    <input type="text" class="form-control" id="feedNameInput" data-bind="value: Feed.Name">
                </div>
                <button type="submit" class="btn btn-danger" data-bind="click: Cancel">Cancel</button>
                <button type="submit" class="btn btn-primary" data-bind="click: SaveChanges">Save</button>
                <button type="submit" class="btn btn-danger float-right" data-bind="click: Delete, visible: ShowDeleteButton">Delete</button>
            </form>
        </div>
    </div>
</section>